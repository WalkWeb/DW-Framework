{
  "name": "walk/dw-framework.loc",
  "description": "Simple MVC framework",
  "authors": [
    {
      "name": "WalkWeb",
      "email": "av18775@list.ru"
    }
  ],
  "config": {
    "soft-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-mysqli": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "Controllers\\": "controllers/",
      "Models\\": "models/",
      "Middleware\\": "middleware/",
      "NW\\": "src/NWFramework",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
